{
    "name": "jlourenco/messaging",
    "type": "library",
    "description": "This module adds ready to use messagins solutions like notifications, warnings, flash messages etc.",
    "keywords": [
        "jlourenco",
        "messaging"
    ],
    "homepage": "https://github.com/jlourenco/messaging",
    "license": "MIT",
    "authors": [
        {
            "name": "Joao Lourenco",
            "email": "jglourenco.pt@gmail.com",
            "homepage": "http://joaolourenco.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "jlourenco\\messaging\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jlourenco\\messaging\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
